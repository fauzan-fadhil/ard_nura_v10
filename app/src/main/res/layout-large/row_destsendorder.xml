<?xml version="1.0" encoding="utf-8"?>
<TableRow
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rowDestination"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@color/white"
            android:padding="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtdestlat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="LAT"/>

                <TextView
                    android:id="@+id/txtdestlng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="LNG"/>

                <TextView
                    android:id="@+id/txtdistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="Distance"/>

                <TextView
                    android:id="@+id/txtprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="Price"/>

             </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/desttitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/grey_700"
                    android:text="DESTINATION"/>

                <Button
                    android:text="REMOVE"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/removeDest"
                    android:textColor="@color/white"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/marker_destination"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tdest"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/EditTextHint">
                    <EditText
                        android:id="@+id/txtdest"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:hint="Destination"
                        android:text="Select a destination"
                        android:inputType="textEmailAddress"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_home"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/destdetail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/EditTextHint">
                    <EditText
                        android:id="@+id/tdestdetail"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:hint="Detail location"
                        android:inputType="textEmailAddress"
                        android:maxLength="50"/>
                    <!--android:text="Input destination detail address"-->
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_phone_grey"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/destcontact"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/EditTextHint">
                    <EditText
                        android:id="@+id/tdestcontact"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:hint="Receiving Contact (optional)"
                        android:inputType="phone"
                        android:maxLength="20"/>
                    <!--android:text="Input contacts the person receiving"-->
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
    </TableRow>
