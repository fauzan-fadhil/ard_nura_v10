<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tgroupmenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/grey_50">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/listPreferredItemHeight"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:orientation="horizontal">
        <!--android:paddingLeft="@d5imen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"-->

        <TextView
            android:visibility="gone"
            android:id="@+id/tgroupid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tgroupname"
            android:layout_width="0.0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Island"
            android:textColor="@color/grey_800"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
            <!-- android:drawableRight="@drawable/ic_arrowright"-->

        <ImageView
            android:id="@+id/tgroupicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/ic_shopping_cart_black_24dp"
            android:contentDescription="image"
            android:scaleType="center" />

        <com.arindo.nura.BadgeView
            android:id="@+id/tgroupqty"
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-10dip"
            android:layout_toRightOf="@+id/icon">
        </com.arindo.nura.BadgeView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:id="@+id/islandImg"
            android:layout_alignParentRight="true"
            android:layout_margin="0dp"
            android:background="@drawable/ic_arrowright"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/listPreferredItemHeight"
        android:gravity="bottom"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tlineid"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark" />
    </LinearLayout>
</android.support.v7.widget.CardView>